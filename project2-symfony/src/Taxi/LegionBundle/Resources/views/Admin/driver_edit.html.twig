{% extends 'TaxiLegionBundle::base.html.twig' %}
{% form_theme form 'TaxiLegionBundle:Form:bootstrap_3_layout.html.twig' %}

{% block title %}Редактирование водителя{% endblock %}

{% block nav %}
    {{ knp_menu_render('TaxiLegionBundle:Builder:adminMenu',{'template': 'TaxiLegionBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}

{% block body %}
    <div class="section-option clearfix">
        <h4>Редактирование водителя - {{ name }}</h4>
        <div class="row">
            <div class="col-lg-6 col-md-6">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate','action': url('taxi_legion_drivers_edit', {'id': id }) }}) }}
                {{ form_row(form.name) }}
                {{ form_row(form.driverCall) }}
                {{ form_row(form.driverMachine) }}
                {{ form_row(form.machineMarka) }}
                {{ form_row(form.machineColor) }}
                {{ form_row(form.phone) }}
                {{ form_row(form.address) }}
                <div class="form-group">
                    {{ form_widget(form.save) }}
                    <a href="{{ path('taxi_legion_driver_delete', {'id': id }) }}" class="btn btn-danger">Удалить</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}