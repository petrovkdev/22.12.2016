{% extends 'TaxiLegionBundle::base.html.twig' %}
{% form_theme form 'TaxiLegionBundle:Form:bootstrap_3_layout.html.twig' %}

{% block title %}Редактирование{% endblock %}

{% block nav %}
  {{ knp_menu_render('TaxiLegionBundle:Builder:adminMenu',{'template': 'TaxiLegionBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}
 
{% block body %}	
	<div class="section-option clearfix">
			<h4>Редактирование пользователя - {{ name }}</h4>
			<div class="row">
					<div class="col-lg-6 col-md-6">
						{{ form_start(form, {'attr': {'novalidate': 'novalidate','action': url('taxi_legion_user_edit', {'id': id }) }}) }}
						{{ form_row(form.username) }}
						{{ form_row(form.password) }}
						<div class="form-group">
							{{ form_widget(form.save) }}
							<a href="{{ path('taxi_legion_user_delete', {'id': id }) }}" class="btn btn-danger">Удалить</a>
						</div>
						{{ form_end(form) }}
					</div>
			</div>
	</div>
{% endblock %}