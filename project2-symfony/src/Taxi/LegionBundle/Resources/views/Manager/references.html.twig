{% extends 'TaxiLegionBundle::base.html.twig' %}

{% block title %}Справочники{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('/css/bootstrap-datetimepicker.min.css') }}" type="text/css" rel="stylesheet" />
    {{ parent() }}
{% endblock %}

{% block nav %}
    {{ knp_menu_render('TaxiLegionBundle:Builder:managerMenu',{'template': 'TaxiLegionBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}

{% block body %}
    <div class="section-option">
        <a href="#" class="btn btn-primary ajax-load" data-action="show_table" data-tpl="abonents_table.html.twig" data-object="Abonents" data-sort="name">
            <span class="glyphicon glyphicon-user"></span> Абоненты</a>
        <a href="#" class="btn btn-primary ajax-load" data-action="show_table" data-tpl="streets_table.html.twig" data-object="Streets" data-sort="name">
            <span class="glyphicon glyphicon-globe"></span> Улицы</a>
        <a href="#" class="btn btn-primary ajax-load" data-action="show_table" data-tpl="black_user_table.html.twig" data-object="BlackUsers" data-sort="name">
            <span class="glyphicon glyphicon-list"></span> Черный список абонентов</a>
    </div>
    <div id="ajax-result"></div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('/js/jquery-form-ajax.js') }}" type="text/javascript"></script>
    <script src="{{ asset('/js/manager.js') }}" type="text/javascript"></script>
{% endblock %}