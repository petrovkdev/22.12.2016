{% if pageCount > 1 %}
  <ul class="pagination">

  {% for page in pagesInRange %}
    <li {% if page == current %}class="active"{% endif %}>
        <a href="#" class="prevent-default link-page" data-action="news_page" data-page="{{ page }}">{{ page }}</a>
    </li>
  {% endfor %}
 
  </ul>
{% endif %}